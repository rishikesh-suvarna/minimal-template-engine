{
  "name": "minimal-template",
  "version": "1.0.0",
  "description": "MinimalTemplate - A lightweight, high-performance template engine",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run lint"
  },
  "keywords": [
    "template",
    "engine",
    "javascript",
    "typescript",
    "minimal"
  ],
  "author": "Rishikesh Suvarna",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "typescript": "^5.8.3",
    "@types/jest": "^29.5.14",
    "eslint": "^9.24.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rishikesh-suvarna/minimal-template-engine.git"
  },
  "bugs": {
    "url": "https://github.com/rishikesh-suvarna/minimal-template-engine/issues"
  },
  "homepage": "https://github.com/rishikesh-suvarna/minimal-template-engine"
}
